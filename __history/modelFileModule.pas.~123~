procedure NewFaceFunc(var Faces, EndFaces: PFace; Data: TFaceData);
var
  NewNode: PFace;
begin
  New(NewNode);
  NewNode^.Data := Data;
  // NewNode^.Normal := Normal;
  NewNode^.Next := nil;
  if Faces = nil then
  begin
    Faces := NewNode;
    EndFaces := Faces;
  end
  else
  begin
    EndFaces^.Next := NewNode;
    EndFaces := NewNode;
  end;
end;

